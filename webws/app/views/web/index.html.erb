<%if cookies[:userid].nil? %>
<div>
	<ol style="list-style: none; height: 20px;">
		<li style="float:right">
			<%= link_to '登陆',  {:controller => "web", :action => "login"}%>
		</li>
		<li style="float:right">
			<%= link_to '注册',  {:controller => "web", :action => "register"}%>
		</li>
	</ol>
</div>
<% elsif%>
<div>
	<ol style="list-style: none; height: 20px;">
		<li style="float:right">
			<%= cookies[:username] %>
		</li>
		<li style="float:right">
			<%= link_to '注销',  {:controller => "web", :action => "logout"}%>		
		</li>
	</ol>
</div>
<% end %>

